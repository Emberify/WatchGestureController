<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_board_color"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_margin_32"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/txt_android_experiments"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_space_gesture_game"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_capsul_selector"
                android:text="@string/space_gesture_game"
                android:textColor="@color/btn_txt_color" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_vr_gesture"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/main_layout_margin_32"
                android:background="@drawable/btn_capsul_selector"
                android:text="@string/vr_gesture"
                android:textColor="@color/btn_txt_color" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_help"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/main_layout_margin_32"
                android:background="@drawable/btn_capsul_selector"
                android:text="@string/help"
                android:textColor="@color/btn_txt_color" />

            <TableRow
                android:id="@+id/tr_connect_wear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_layout_margin_32"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_connect_wear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_margin_8" />

                <TextView
                    android:id="@+id/txt_connect_wear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/txt_title_size" />

            </TableRow>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_android_experiments"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/android_experiments"
            android:textColor="@color/white_color"
            android:textSize="@dimen/txt_title_size" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
