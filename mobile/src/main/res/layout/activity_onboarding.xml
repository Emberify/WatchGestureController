<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/game_board_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin_16"
    tools:context=".OnboardingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/layout_margin_32"
        android:layout_weight="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onboarding_hand" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/layout_margin_16"
        android:layout_weight="1"
        android:gravity="center|top"
        android:text="@string/txt_onboarding"
        android:textColor="@color/white_color"
        android:textSize="@dimen/txt_title_size" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/onboarding_button_shape"
        android:text="@string/btn_get_started"
        android:textColor="@color/game_board_color" />

</LinearLayout>
